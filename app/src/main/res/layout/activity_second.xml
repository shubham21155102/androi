<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".SecondActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_below="@id/downloadImage"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        ></ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:gravity="center"
        android:text="name"
        android:id="@+id/name"
        android:textColor="@color/white"
        android:textIsSelectable="true"> <!-- Add this attribute -->

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@+id/name"
        android:gravity="center"
        android:id="@+id/email"
        android:text="email"
        android:textColor="@color/white"
        android:textIsSelectable="true"> <!-- Add this attribute -->

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@+id/email"
        android:gravity="center"
        android:id="@+id/idToken"
        android:text="idToken"
        android:textColor="@color/white"
        android:textIsSelectable="true"> <!-- Add this attribute -->

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@+id/signout"
        android:gravity="center"
        android:id="@+id/alldatas"
        android:text="email"
        android:textColor="@color/white"
        android:textIsSelectable="true"> <!-- Add this attribute -->

    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:layout_below="@+id/alldatas"
        android:gravity="center"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher_background"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Image"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:id="@+id/downloadImage"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/alldatas"
        android:visibility="gone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:layout_below="@+id/idToken"
        android:layout_marginStart="39dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="39dp"
        android:gravity="center"
        android:id="@+id/signout"
        android:textColor="@color/white"
        />
</RelativeLayout>